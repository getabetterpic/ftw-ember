{{#if model}}
  {{#each model as |account|}}
    {{#link-to 'transactions' account class="collection-item pointer" tagName="li"}}
      <span class="truncate">{{account.description}}
        <div class="secondary-content">{{format-number account.availableBalance}}</div>
      </span>
    {{/link-to}}
  {{/each}}
{{else}}
  <li class="collection-item">Looks like you don't have any accounts yet. Why don't you go ahead and
    {{#link-to 'accounts.link'}}add one{{/link-to}}?
  </li>
{{/if}}
